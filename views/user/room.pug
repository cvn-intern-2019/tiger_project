                        //-     | #{username} 
                        //-     |&nbsp;&nbsp;&nbsp;&nbsp; 
                        //-     | #{message}
                
                .input-group
                    .input-group-prepend
                        select#receiverSelect.custom-select.bg-secondary.text-light(name="receiver")
