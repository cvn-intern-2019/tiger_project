extends layout
block sessionCSS
    title Lounge | Werewolf Online - Tiger Team
    link(rel="stylesheet", href="/stylesheets/lounge.css")
    link(rel="stylesheet",href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="/javascripts/lounge.js")
    script(src="https://kit.fontawesome.com/3f47eb379d.js")

    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")

block content
    .container-fluid
        -   var username = "PhanMai"
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.shadow.sticky-top
            a.navbar-brand(href='/lounge')
                h1 WereWolf Online
            a(class='btn btn-outline-light  ',href='/user/room') CreateNewRoom

            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse

            form.form-inline.my-2.my-lg-0
                input.form-control.mr-sm-2(type='search', placeholder="ID's Room", aria-label='Search')
                button.btn.btn-outline-light.my-2.my-sm-0(type='submit') Search
            form#frmSignout(action='/user/room', method='POST')
            ul.navbar-nav
                li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                        | Hi, 
                        b  #{username}
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
                        a.dropdown-item(href='/account/profile')
                            i.fa.fa-user(aria-hidden='true')
                            |                             Profile
                        .dropdown-divider
                        a.dropdown-item(href='/')
                            i.fa.fa-history(aria-hidden='true')
                            |                             History
                        .dropdown-divider
                        a.dropdown-item(href="/")
                            i.fa.fa-sign-out-alt(aria-hidden='true')
                            |                             Sign Out

        .row.room
                    each room in rooms 
                        .col-sm-6.col-md-4.col-lg-4.mt-3
                            .card
                                h5.card-header.text-dark RoomID :  #{room.roomID}
                                .card-body
                                    h5.card-title.text-dark Room's author :   
                                        a(href='/user') #{room.roomAuthor}
                                    p.card-text.text-dark Number players : #{room.roomNumPlayers}
                                    a.btn.btn-dark(href='/user/room') Join
            

        footer.page-footer.font-small.dark
                    .footer-copyright.py-3.text-center
                        | &copy; 2019 Internship's Cybozu 
                        a(href='#')  Made by Tiger Team